package com.LeaveManagement.Model.Mappers;

import org.modelmapper.ModelMapper;


import com.LeaveManagement.Model.Dto.LeaveRequestDto;

import com.LeaveManagement.Model.Entity.LeaveRequest;

public class LeaveRequestMapper {
	private static final ModelMapper modelMapper = new ModelMapper();

    public static LeaveRequestDto convertToDTO(LeaveRequest LeaveRequest) {
        return modelMapper.map(LeaveRequest,LeaveRequestDto.class);
    }

    public static LeaveRequest convertToEntity(LeaveRequestDto LeaveRequestDto) {
        return modelMapper.map(LeaveRequestDto, LeaveRequest.class);
    }	

}
