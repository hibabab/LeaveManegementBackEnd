package com.LeaveManagement.Model.Mappers;

import org.modelmapper.ModelMapper;

import com.LeaveManagement.Model.Dto.BaseDto;
import com.LeaveManagement.Model.Entity.BaseEntity;


public class BaseMapper {
	private static final ModelMapper modelMapper = new ModelMapper();

    public static BaseDto convertToDTO(BaseEntity BaseEntity) {
        return modelMapper.map(BaseEntity,BaseDto.class);
    }

    public static BaseEntity convertToEntity(BaseDto BaseDto) {
        return modelMapper.map(BaseDto, BaseEntity.class);
    }	


}
